#!/usr/bin/env sh
# Post-commit hook that pushes the current branch to origin
# NOTE: This script will attempt to push; ensure you have network access and proper credentials.
branch=$(git rev-parse --abbrev-ref HEAD 2>/dev/null)
if [ -z "$branch" ]; then
  exit 0
fi

# Push current branch to origin
echo "[git-hook] Pushing branch '$branch' to origin..."
git push origin "$branch"
exit 0
